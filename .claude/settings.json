{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "cat README.md"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "(commit|提交|git commit)(?!.*不更新.*readme)(?!.*但不更新.*readme)(?!.*skip.*readme)",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"📝 自動提醒：請在提交時同時更新 README.md 記錄專案進度和功能變更\""
          }
        ]
      },
      {
        "matcher": "(commit|提交|git commit).*(不更新.*readme|但不更新.*readme|skip.*readme)",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"⚠️ 注意：根據指示，本次提交將跳過 README.md 更新\""
          }
        ]
      }
    ]
  }
}