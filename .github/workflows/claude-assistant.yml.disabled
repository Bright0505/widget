name: Claude Assistant

on:
  issue_comment:
    types: [created]
  issues:
    types: [opened, edited]

permissions:
  issues: write
  contents: write
  pull-requests: write

jobs:
  claude-response:
    runs-on: ubuntu-latest
    # Âè™Âú®Ë©ïË´ñÂåÖÂê´ @claude ÊôÇÂü∑Ë°å
    if: contains(github.event.comment.body, '@claude') || contains(github.event.issue.body, '@claude')

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'

      - name: Process Claude Command
        id: claude
        env:
          ANTHROPIC_API_KEY: ${{ secrets.ANTHROPIC_API_KEY }}
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
          ISSUE_NUMBER: ${{ github.event.issue.number }}
          COMMENT_BODY: ${{ github.event.comment.body || github.event.issue.body }}
          REPO_FULL_NAME: ${{ github.repository }}
        run: |
          node .github/scripts/claude-processor.js

      - name: Post Result to Issue
        uses: actions/github-script@v7
        with:
          script: |
            const fs = require('fs');
            const response = fs.readFileSync('/tmp/claude-response.txt', 'utf8');

            await github.rest.issues.createComment({
              owner: context.repo.owner,
              repo: context.repo.repo,
              issue_number: context.issue.number,
              body: response
            });

      - name: Notify Slack (Optional)
        if: env.SLACK_WEBHOOK_URL != ''
        env:
          SLACK_WEBHOOK_URL: ${{ secrets.SLACK_WEBHOOK_URL }}
        run: |
          if [ -f /tmp/claude-response.txt ]; then
            RESPONSE=$(cat /tmp/claude-response.txt | jq -Rs .)
            curl -X POST $SLACK_WEBHOOK_URL \
              -H 'Content-Type: application/json' \
              -d "{\"text\": \"ü§ñ Claude responded to issue #${{ github.event.issue.number }}\", \"blocks\": [{\"type\": \"section\", \"text\": {\"type\": \"mrkdwn\", \"text\": $RESPONSE}}]}"
          fi